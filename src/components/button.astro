---
interface Props {
	link: string;
	label: string;
	newTab?: boolean;
}

const {
	link,
	label,
	newTab,
} = Astro.props;
---


{link ? (
	<a href={link}>
		<span>{label}</span>
	</a>
) : (
	<button type="button">
		<span>{label}</span>
	</button>
)}


<style lang="scss">
	button,
	a {
		padding-inline: 0.7ex;
		padding-block: 1.5ch;
		background: var(--color-teal);
		border-radius: 4px;
		color: var(--color-white);
		border: 1px solid var(--color-teal);
		transition: 0.2s;

		&:hover,
		&:focus-visible {
			background: var(--color-white);
			color: var(--color-teal);
		}
	}
</style>
